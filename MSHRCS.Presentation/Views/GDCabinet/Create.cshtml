@model MSHRCS.Presentation.Models.NewGDCabinetViewModel
@{
    ViewBag.Title = "Расписание";
}

<div class="col-md-9 col-md-offset-1">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>

            <legend>Расписание</legend>
            <div>
                <table class="new-object-table">
                    <tbody>
                        <tr>
                            <td class="field-name">@Html.Label("Date", "Дата")</td>
                            <td class="field-value">
                                <div class="input-append date input-group" id="Date">
                                    <input type="text" class="form-control" value="@DateTime.Now.Date.ToShortDateString()">
                                    <span class=" add-on input-group-btn">
                                        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
                                    </span>
                                </div>
                            </td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.GroupId)</td>
                        </tr>
                        <tr>
                            @Html.HiddenFor(model => model.GroupId)
                            <td class="field-name">@Html.LabelFor(model => model.GroupId)</td>
                            <td class="field-value">@Html.TextBox("GroupIdTextBox", String.Empty, new { @class = "form-control twitter-typeahead" })</td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.GroupId)</td>
                        </tr>
                        <tr>
                            @Html.HiddenFor(model => model.DisciplineId)
                            <td class="field-name">@Html.LabelFor(model => model.DisciplineId)</td>
                            <td class="field-value">@Html.TextBox("DisciplineIdTextBox", String.Empty, new { @class = "form-control twitter-typeahead" })</td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.DisciplineId)</td>
                        </tr>
                        <tr>
                            @Html.HiddenFor(model => model.CabinetId)
                            <td class="field-name">@Html.LabelFor(model => model.CabinetId)</td>
                            <td class="field-value">@Html.TextBox("CabinetIdTextBox", String.Empty, new { @class = "form-control twitter-typeahead" })</td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.CabinetId)</td>
                        </tr>
                        <tr>
                            <td class="field-name">@Html.LabelFor(model => model.LessonId)</td>
                            <td class="field-value">@Html.DropDownList("LessonId", (IEnumerable<SelectListItem>)ViewBag.Lessons, new { @class = "form-control" })</td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.LessonId)</td>
                        </tr>
                        <tr>
                            <td class="field-name">@Html.LabelFor(model => model.LessonTypeId)</td>
                            <td class="field-value">@Html.DropDownListFor(model => model.LessonTypeId, (IEnumerable<SelectListItem>)ViewBag.LessonTypes, new { @class = "form-control" })</td>
                            <td class="field-validation-error">@Html.ValidationMessageFor(model => model.LessonTypeId)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </fieldset>
        <div class="margin-top">
            @Html.ActionLink("Назад к списку", "Index", "", new { @class = "btn btn-default" })
            <input type="submit" id="submit" value="Создать" class="btn btn-primary pull-right" />
        </div>
    }
</div>

<script src="@Url.Content("~/Scripts/createGDCabinet.js")" type="text/javascript"></script>

